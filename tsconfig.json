{
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  },
      "compilerOptions": {
      "jsx": "react",
      "target": "es5",
      "module": "commonjs",
      "outDir": "./dist",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "moduleResolution": "node",
      
    },
    "include": [
      "src/**/*.ts",
      "src/types/.d.ts"    
, "src/router/config.js"    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }
  